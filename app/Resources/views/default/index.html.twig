{% extends 'base.html.twig' %}

{% block body %}
    <div class="principal">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-md-6">
                    <p class="principal1">{{ principal1.content|raw }}</p>
                </div>
                <div class="col-xs-12 col-md-6">
                    <p class="principal2">{{ principal2.content|raw }}</p>
                    <p class="principal3">{{ principal3.content|raw }}</p>
                </div>
            </div>
        </div>
    </div>

    <div class="environnement gray block">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-md-6">
                </div>
                <div class="col-xs-12 col-md-6">
                    <h2>{{ environnement.title }}</h2>
                    <p>{{ environnement.content|raw }}</p>
                </div>
            </div>
        </div>
    </div>

    <div class="entreprise white block">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-md-6">
                    <h2>{{ entreprise.title }}</h2>
                    <p>{{ entreprise.content|raw }}</p>
                </div>
                <div class="col-xs-12 col-md-6">
                </div>
            </div>
        </div>
    </div>

    <div class="sport gray block">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-md-6">
                </div>
                <div class="col-xs-12 col-md-6">
                    <h2>{{ sport.title }}</h2>
                    <p>{{ sport.content|raw }}</p>
                </div>
            </div>
        </div>
    </div>

    <div class="culture white block">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-md-6">
                    <h2>{{ culture.title }}</h2>
                    <p>{{ culture.content|raw }}</p>
                </div>
                <div class="col-xs-12 col-md-6">
                </div>
            </div>
        </div>
    </div>

    <div class="medias">
        <div class="container">
            <div class="row">
                {% for media in medias %}
                    {% if loop.index < 6 %}
                        {% if loop.first %}
                            <div class="col-xs-6">
                                {% media media, 'big' %}
                            </div>
                            <div class="col-xs-6">
                            <div class="row">
                        {% else %}
                            <div class="col-xs-6">
                                {% thumbnail media, 'big' %}
                            </div>
                        {% endif %}
                        {% if loop.last %}
                            </div>
                            </div>
                        {% endif %}
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>




    <form method="post" action="{{ path('homepage') }}">
        {{form_errors(form)}}
        <div class="form-group">
            {{ form_widget(form.email) }}
        </div>

        <div class="form-group">
            {{ form_widget(form.lastname) }}
        </div>

        <div class="form-group">
            {{ form_widget(form.firstname) }}
        </div>
        {{ form_widget(form._token) }}
        <button class="btn btn-default" type="submit" id="mailSubmit">S'inscrire</button>
    </form>

{% endblock %}
