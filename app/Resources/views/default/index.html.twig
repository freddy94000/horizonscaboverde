{% extends 'base.html.twig' %}

{% block body %}
    <div class="newsletter">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-md-6">
                    <form method="post" action="{{ path('homepage') }}" class="form-inline">
                        {{form_errors(formNewsletter)}}

                        <div class="form-group">
                            <label>NEWSLETTER</label>
                            {{ form_widget(formNewsletter.email, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre email pour vous inscrire'}}) }}
                        </div>

                        {{ form_widget(formNewsletter._token) }}
                        <button class="btn btn-primary btn-newlestter" type="submit" id="mailSubmit">OK</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="principal">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-md-6">
                    <p class="principal1">{{ principal1.content|raw }}</p>
                </div>
                <div class="col-xs-12 col-md-6">
                    <p class="principal2">{{ principal2.content|raw }}</p>
                    <p class="principal3">{{ principal3.content|raw }}</p>
                </div>
            </div>
        </div>
    </div>

    <div class="environnement gray block">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-md-6">
                    {% media environnmentVideo, 'big' %}
                </div>
                <div class="col-xs-12 col-md-6">
                    <h2>{{ environnement.title }}</h2>
                    <p>{{ environnement.content|raw }}</p>
                </div>
            </div>
        </div>
    </div>

    <div class="entreprise white block">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-md-6">
                    <h2>{{ entreprise.title }}</h2>
                    <p>{{ entreprise.content|raw }}</p>
                </div>
                <div class="col-xs-12 col-md-6">
                    {% media entrepriseVideo, 'big' %}
                </div>
            </div>
        </div>
    </div>

    <div class="medias">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-md-12">
                    {% media principalVideo, 'bigger' %}
                </div>
            </div>
        </div>
    </div>

    <div class="sport white block">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-md-6">
                    <h2>{{ sport.title }}</h2>
                    <p>{{ sport.content|raw }}</p>
                </div>
                <div class="col-xs-12 col-md-6">
                    {% media sportVideo, 'big' %}
                </div>
            </div>
        </div>
    </div>

    <div class="culture gray block">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-md-6">
                    {% media cultureVideo, 'big' %}
                </div>
                <div class="col-xs-12 col-md-6">
                    <h2>{{ culture.title }}</h2>
                    <p>{{ culture.content|raw }}</p>
                </div>
            </div>
        </div>
    </div>

    <div class="inscription">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-md-12">
                    <h2>Devenez adhérent</h2>

                    <form method="post" action="{{ path('homepage') }}">
                        {{form_errors(form)}}
                        <div class="form-group">
                            <label>Civilité</label>
                            {{ form_widget(form.gender, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            <label>Email</label>
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            <label>Nom</label>
                            {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            <label>Prénom</label>
                            {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            <label>Adresse</label>
                            {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            <label>Code Postal</label>
                            {{ form_widget(form.codePostal, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            <label>Ville</label>
                            {{ form_widget(form.city, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            <label>Téléphone</label>
                            {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            <label>Entreprise</label>
                            {{ form_widget(form.company, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            <label>Activité</label>
                            {{ form_widget(form.activity, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            <label>Profession</label>
                            {{ form_widget(form.proffession, {'attr': {'class': 'form-control'}}) }}
                        </div>


                        {{ form_widget(form._token) }}
                        <button class="btn btn-primary btn-lg btn-block" type="submit" id="mailSubmit">S'inscrire</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
