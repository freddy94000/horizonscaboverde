{% extends 'base2.html.twig' %}

{% block body %}
    <div class="menu_orange">
        <ul>
            <li><a href="" class="first">D238</a></li>
            <li><a href="">ACTU</a></li>
            <li><a href="">ENTREPRISE</a></li>
