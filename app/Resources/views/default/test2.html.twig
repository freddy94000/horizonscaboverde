    <div class="header_photo">
        <h1>{{ principal1.title|raw }}</h1>
    </div>


    <div class="bandeau_newsletter">
        <div class="container_newsletter">
            <div class="form_newsletter">
                <form method="post" action="{{ path('homepage') }}" class="form-inline">
                    {{form_errors(formNewsletter)}}

                    <div class="form-group">
                        <label>NEWSLETTER</label>
                        {{ form_widget(formNewsletter.email, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre email'}}) }}
                    </div>

                    {{ form_widget(formNewsletter._token) }}
                    <button class="btn btn-primary btn-newlestter" type="submit" id="mailSubmit">GO</button>
                </form>
            </div>
            <div class="social_link">
                <a href="">TWITTER</a>
                <a href="https://www.facebook.com/Horizonscaboverde">FACEBOOK</a>
                <a href="">INSTAGRAM</a>
            </div>
        </div>
    </div>


    <div class="block_principal">
        <div class="container_principal">
            <div class="principal_left">
                <p class="principal1">{{ principal1.content|raw }}</p>
            </div>
            <div class="principal_right">
                <p class="principal2">{{ principal2.content|raw }}</p>
                <p class="principal3">{{ principal3.content|raw }}</p>
            </div>
        </div>
    </div>


    <div class="block_video">
        <div class="container_video">
            {% media principalVideo, 'bigger' %}
        </div>
    </div>


    <div class="block_content block_entreprise">
        <div class="container_content">
            <div class="content_picture"><img src="{{ asset('images/entreprise.jpg') }}"></div>
