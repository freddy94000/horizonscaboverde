            <div class="text_picture">
                <h2>{{ culture.title }}</h2>
                <p>{{ culture.content|raw }}</p>
                <a href="">+ Art</a>
            </div>
        </div>
    </div>

    <div class="block_content block_adhesion">
        <div class="container_content">
